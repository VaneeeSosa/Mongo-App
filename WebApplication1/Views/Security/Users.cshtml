@model List<MongoDB.Bson.BsonDocument>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mt-4">
    <h2 class="text-center text-pink fw-bold">@ViewData["Title"]</h2>

    <div class="card mt-3 shadow border-0">
        <div class="card-header bg-pink text-white fw-bold">
            Usuarios Registrados
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Roles</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user["user"]</td>
                            <td>
                                @foreach (var role in user["roles"].AsBsonArray)
                                {
                                    <span class="badge bg-lightpink text-dark">@role["role"]</span>
                                }
                            </td>
                            <td>
                                <form method="post" asp-action="DeleteUser">
                                    <input type="hidden" name="database" value="@ViewContext.HttpContext.Request.Query["database"]" />
                                    <input type="hidden" name="username" value="@user["user"].ToString()" />
                                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mt-4 shadow border-0">
        <div class="card-header bg-lightpink text-dark fw-bold">
            Nuevo Usuario
        </div>
        <div class="card-body">
            <form asp-action="CreateUser">
                <input type="hidden" name="database" value="@ViewContext.HttpContext.Request.Query["database"]" />
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="username" placeholder="Nombre de usuario" required>
                    </div>
                    <div class="col-md-4">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="role" required>
                            <option value="read">Lectura</option>
                            <option value="readWrite">Escritura</option>
                            <option value="dbAdmin">Administrador</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-pink">Crear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
