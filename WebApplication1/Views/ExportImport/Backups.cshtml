@model List<string>
@{
    ViewData["Title"] = "Gestión de Backups";
}

<!-- Estilos personalizados para tema rosa pastel -->
<style>
    .pastel-bg {
        background-color: #ffb6c1 !important;
    }

    .pastel-border {
        border: 1px solid #ffb6c1 !important;
    }

    .pastel-card-header {
        background-color: #ffb6c1;
        color: #ffffff;
    }

    .btn-pastel {
        background-color: #ffb6c1;
        border-color: #ffb6c1;
        color: #fff;
    }

        .btn-pastel:hover {
            background-color: #ffa6b8;
            border-color: #ffa6b8;
            color: #fff;
        }
</style>

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Tabla de Backups -->
    <div class="card pastel-border mt-3">
        <div class="card-header pastel-card-header">
            <h4>Listado de Backups</h4>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre del Archivo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var backupPath in Model)
                        {
                            var fileName = System.IO.Path.GetFileName(backupPath);
                            <tr>
                                <td>@fileName</td>
                                <td>
                                    <a href="@Url.Content("~" + backupPath)" class="btn btn-sm btn-pastel" download>Descargar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No se encontraron backups.</p>
            }
        </div>
    </div>
</div>
