@model List<string>
@{
    ViewData["Title"] = "Importar/Exportar Datos";
}

<div class="container mt-4">
    <h2 class="text-center text-pink fw-bold">@ViewData["Title"]</h2>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-pink text-white fw-bold">
                    Exportar Datos
                </div>
                <div class="card-body">
                    <form asp-controller="Data" asp-action="ExportData" method="post">
                        <div class="form-group mb-3">
                            <label>Base de Datos:</label>
                            <select name="database" class="form-control" required>
                                <option value="">Seleccione una base de datos</option>
                                @foreach (var db in Model)
                                {
                                    <option value="@db">@db</option>
                                }
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label>Colección:</label>
                            <input type="text" name="collection" class="form-control" placeholder="Nombre de la colección" required />
                        </div>
                        <button type="submit" class="btn btn-pink w-100">Exportar Datos</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-lightpink text-dark fw-bold">
                    Importar Datos
                </div>
                <div class="card-body">
                    <form asp-controller="Data" asp-action="ImportData" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label>Base de Datos:</label>
                            <select name="database" class="form-control" required>
                                <option value="">Seleccione una base de datos</option>
                                @foreach (var db in Model)
                                {
                                    <option value="@db">@db</option>
                                }
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label>Colección:</label>
                            <input type="text" name="collection" class="form-control" placeholder="Nombre de la colección" required />
                        </div>
                        <div class="form-group mb-3">
                            <label>Archivo ZIP (contiene JSON/CSV):</label>
                            <input type="file" name="file" class="form-control-file" accept=".zip" required />
                            <small class="form-text text-muted">
                                Sube un ZIP generado por la exportación.
                            </small>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Importar Datos</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
