@model List<string>
@{
    ViewData["Title"] = "Administración de Bases de Datos";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <!-- Lista de bases -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow" style="background-color:#ffe3e3;">
                <div class="card-header text-white" style="background-color:#d81b60;">
                    Bases de Datos Existentes
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var db in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @db
                                <div>
                                    <a href="/Security/Users?database=@db" class="btn btn-sm btn-info">Usuarios</a>
@*                                     <a href="#" class="btn btn-sm btn-danger">Eliminar</a>*@                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Crear base -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow" style="background-color:#fce4ec;">
                <div class="card-header text-white" style="background-color:#ec407a;">
                    Nueva Base de Datos
                </div>
                <div class="card-body">
                    <form asp-action="CreateDatabase">
                        <div class="input-group">
                            <input type="text" name="databaseName" class="form-control" placeholder="Nombre de la base de datos" required />
                            <button type="submit" class="btn btn-danger">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Accesos -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow" style="background-color:#f8bbd0;">
                <div class="card-header text-white" style="background-color:#c2185b;">
                    Backups y Colecciones
                </div>
                <div class="card-body">
                    <a asp-controller="Data" asp-action="ExportacionImportacion" class="btn btn-outline-dark w-100 mb-2">Colecciones</a>
                    <a asp-controller="Backup" asp-action="Backups" class="btn btn-outline-dark w-100">Backups</a>
                </div>
            </div>
        </div>
    </div>
</div>
